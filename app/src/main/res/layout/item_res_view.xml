<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/imgRes"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtResName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="32dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imgRes"
        app:layout_constraintStart_toStartOf="@+id/imgRes"
        app:layout_constraintTop_toBottomOf="@+id/imgRes" />

    <TextView
        android:id="@+id/txtFoodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:textColor="#29000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/txtResName"
        app:layout_constraintStart_toStartOf="@+id/txtResName"
        app:layout_constraintTop_toBottomOf="@+id/txtResName" />

    <ImageView
        android:id="@+id/imgStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:src="@drawable/star"
        app:layout_constraintStart_toStartOf="@+id/txtFoodName"
        app:layout_constraintTop_toBottomOf="@+id/txtFoodName" />

    <TextView
        android:id="@+id/txtStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="4.6"
        app:layout_constraintBottom_toBottomOf="@+id/imgStar"
        app:layout_constraintStart_toEndOf="@+id/imgStar"
        app:layout_constraintTop_toTopOf="@+id/imgStar" />

    <ImageView
        android:id="@+id/imgTruck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:src="@drawable/truck"
        app:layout_constraintBottom_toBottomOf="@+id/imgStar"
        app:layout_constraintStart_toEndOf="@+id/txtStar"
        app:layout_constraintTop_toTopOf="@+id/imgStar" />

    <TextView
        android:id="@+id/txtTruck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Free Shipping"
        app:layout_constraintBottom_toBottomOf="@+id/imgTruck"
        app:layout_constraintStart_toEndOf="@+id/imgTruck"
        app:layout_constraintTop_toTopOf="@+id/imgTruck" />

    <ImageView
        android:id="@+id/imgClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:src="@drawable/clock"
        app:layout_constraintBottom_toBottomOf="@+id/imgTruck"
        app:layout_constraintStart_toEndOf="@+id/txtTruck"
        app:layout_constraintTop_toTopOf="@+id/imgTruck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="10m"
        app:layout_constraintBottom_toBottomOf="@+id/imgClock"
        app:layout_constraintStart_toEndOf="@+id/imgClock"
        app:layout_constraintTop_toTopOf="@+id/imgClock" />
</androidx.constraintlayout.widget.ConstraintLayout>